{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "yarn --cwd ./functions tsc"
  },
  "hosting": {
    "predeploy": ["yarn install --frozen-lockfile", "yarn vite build"],
    "public": "dist",
    "ignore": ["**/.*"],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
